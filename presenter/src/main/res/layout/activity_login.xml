<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LoginActivity">
    
    <ImageView
        android:id="@+id/login_top"
        android:layout_width="415dp"
        android:layout_height="315dp"
        android:src="@drawable/ic_olio_login_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textSize="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="68dp"
        android:textColor="#6DADA8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/login_top"
        />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="342dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_top"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Email 입력"
        android:layout_marginTop="367dp"
        android:layout_marginLeft="49dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="49dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <CheckBox
        android:id="@+id/email_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="49dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 저장"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="77dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/비밀번호 찾기"
        android:textSize="12dp"
        android:layout_marginLeft="58dp"
        app:layout_constraintTop_toBottomOf="@+id/email_save"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="288dp"
        android:layout_height="60dp"
        android:hint="Sign in"
        android:textColorHint="@color/white"
        android:backgroundTint="#6DADA8"
        android:layout_marginTop="558dp"
        android:layout_marginLeft="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 계정이 없으신가요?"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="635dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/login_bottom"
        android:layout_width="340dp"
        android:layout_height="337dp"
        android:src="@drawable/ic_olio_login_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />








</androidx.constraintlayout.widget.ConstraintLayout>