<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegisterAcitvity">

    <ImageView
        android:id="@+id/register_top"
        android:layout_width="415dp"
        android:layout_height="315dp"
        android:src="@drawable/ic_olio_register_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="68dp"
        android:text="Sign up"
        android:textColor="#6DADA8"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/register_top"
        app:layout_constraintLeft_toLeftOf="parent" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/register_email"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="49dp"
            android:backgroundTint="@color/white"
            android:hint="Email 입력"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="350dp"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/register_pwd"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49dp"
            android:backgroundTint="@color/white"
            android:hint="비밀번호"
            android:inputType="textPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:backgroundTint="#00FF0000"
        app:layout_constraintTop_toTopOf="parent">
        <EditText

            android:id="@+id/pwdcheck"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49dp"
            android:backgroundTint="@color/white"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="288dp"
        android:layout_height="60dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="563dp"
        android:backgroundTint="#6DADA8"
        android:hint="Sign up"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="34dp"
        android:layout_marginTop="699dp"
        android:text="이미 계정이 있으신가요?"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_olio_register_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>